    href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
    rel="stylesheet"
/>
    <title>Document</title>

</head>
<body>
    
    <div class="container">
        <div class="musicpage">
            <nav>
                <div id="logo" class="menu"><span>sangeet ðŸŽµ</span> </div>
                <div id="menucolour"class="menu"><i class="ri-menu-2-line"></i> </div>
                
                
            </nav>
            <img src="image song.webp" class="songimage">
            <H1>TAINU KHABAR NAHI</H1>
            <P> SINGER: ARIJIT SINGH</P>
            <audio  id="song"> <source src="Tainu-Khabar-Nahi(Pagal-World.Com.In).mp3" ></audio>
            <br>
            <input type="range" value="0" id="bar">

            <div class="controls">
                <div><i class="ri-skip-back-fill"></i></div>
                <div onclick="playpause()"><i class="ri-play-large-fill" id="playbtn"></i></div>
                <div><i class="ri-skip-forward-fill"></i></div>
            </div>
           
        
        </div>
       
    </div>

    <script>
    let bar=document.getElementById("bar");
    let playbtn=document.getElementById("playbtn");
    let song=document.getElementById("song");

    song.onloadedmetadata=function(){
        bar.max = song.duration;
        bar.value=song.currentTime;

    }

   function playpause(){

        if(playbtn.classList.contains("ri-pause-large-fill")){
            song.pause();
            playbtn.classList.remove("ri-pause-large-fill");
            playbtn.classList.add("ri-play-large-fill");
        }
        else{
            song.play();
            playbtn.classList.add("ri-pause-large-fill");
            playbtn.classList.remove("ri-play-large-fill");
           
        }


    }
   


    if(song.play()){
        setInterval(()=>{
            bar.value=song.currentTime;
  
        },4000)
    }
    bar.onchange=function(){
        song.currentTime= bar.value;
        playbtn.classList.add("ri-pause-large-fill");
       playbtn.classList.remove("ri-play-large-fill");
           

    }

    </script>
    
</body>
</html>
